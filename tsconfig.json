{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
      "tailwind.config": ["./tailwind.config.js"],
      "@env": ["./node_modules/react-native-dotenv"]
    },
    "jsx": "react-jsx",
    "types": ["nativewind/types"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"]
}
